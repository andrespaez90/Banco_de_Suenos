<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg3"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".InfoGoalActivity" >

    <EditText
        android:id="@+id/newgoal_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_alignRight="@+id/textView1"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="17dp"
        android:ems="10"
        android:inputType="textPersonName" >

        <requestFocus />
    </EditText>

    <Gallery
        android:id="@+id/gallery1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/newgoal_save"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="@string/pregunta_nombre"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <ImageView
        android:id="@+id/info_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/info_camera"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="14dp"
        android:layout_marginTop="12dp"
        android:layout_toRightOf="@+id/gallery1"
        android:src="@drawable/paisaje" />

    <Button
        android:id="@+id/info_bnext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/info_camera"
        android:layout_alignRight="@+id/info_gridphoto"
        android:layout_alignTop="@+id/info_bskip"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="@string/boton_ok"
        android:textAlignment="center" />

    <ImageButton
        android:id="@+id/info_gridphoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/info_img"
        android:layout_alignTop="@+id/info_camera"
        android:src="@android:drawable/ic_menu_search" />

    <EditText
        android:id="@+id/info_why"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/newgoal_save"
        android:layout_alignRight="@+id/newgoal_save"
        android:layout_below="@+id/newgoal_save"
        android:layout_marginTop="24dp"
        android:hint="@string/texto_explicacionNombre"
        android:inputType="textMultiLine"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/principal_blue" />

    <Button
        android:id="@+id/info_bskip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/info_why"
        android:layout_below="@+id/info_why"
        android:layout_marginTop="11dp"
        android:text="@string/boton_omitir"
        android:textAlignment="textStart" />

    <ImageButton
        android:id="@+id/info_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/info_bnext"
        android:layout_toLeftOf="@+id/info_gridphoto"
        android:src="@android:drawable/ic_menu_camera" />

</RelativeLayout>
