<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg3"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".NewGoalActivity" >

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/titulo_nuevoSueno"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/blue_title"
        android:textStyle="bold" />

    <AutoCompleteTextView
        android:id="@+id/newgoal_dgoal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/info_why"
        android:layout_below="@+id/info_why"
        android:layout_marginTop="14dp"
        android:autoText="false"
        android:ems="10" />

    <TextView
        android:id="@+id/info_why"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TextView01"
        android:layout_marginRight="13dp"
        android:layout_marginTop="18dp"
        android:layout_toLeftOf="@+id/TextView01"
        android:text="@string/pregunta_sueno"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/newgoal_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/newgoal_dgoal"
        android:layout_alignBottom="@+id/newgoal_dgoal"
        android:layout_alignLeft="@+id/newgoal_value"
        android:layout_marginLeft="18dp"
        android:text="Medium Text"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/blue_title" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/info_why"
        android:layout_alignBottom="@+id/info_why"
        android:layout_alignRight="@+id/newgoal_calendar"
        android:layout_marginRight="11dp"
        android:text="@string/pregunta_cuando"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/newgoal_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/newgoal_saving"
        android:layout_alignBottom="@+id/newgoal_saving"
        android:layout_alignRight="@+id/newgoal_calendar"
        android:ems="10"
        android:hint="@string/signo_pesos"
        android:inputType="number" />

    <EditText
        android:id="@+id/newgoal_saving"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView5"
        android:layout_below="@+id/textView5"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="@string/signo_pesos"
        android:inputType="number" />

    <Spinner
        android:id="@+id/newgoal_t_saving"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/newgoal_bsiguiente"
        android:layout_alignLeft="@+id/newgoal_saving"
        android:layout_alignRight="@+id/newgoal_saving"
        android:entries="@array/type_save" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/newgoal_dgoal"
        android:layout_below="@+id/newgoal_calendar"
        android:layout_marginTop="16dp"
        android:text="@string/pregunta_como_ahorras"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/newgoal_saving"
        android:layout_alignLeft="@+id/textView3"
        android:text="@string/pregunta_costo"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/newgoal_calendar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/newgoal_dgoal"
        android:layout_alignParentRight="true"
        android:layout_marginRight="35dp"
        android:src="@android:drawable/ic_menu_today" />

    <Button
        android:id="@+id/newgoal_bsiguiente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/newgoal_value"
        android:layout_marginTop="22dp"
        android:layout_toRightOf="@+id/newgoal_date"
        android:background="@color/blue_title"
        android:text="@string/boton_siguiente"
        android:textColor="#fff" />

    <Button
        android:id="@+id/newgoal_calculate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/newgoal_bsiguiente"
        android:layout_alignBottom="@+id/newgoal_bsiguiente"
        android:layout_toLeftOf="@+id/newgoal_bsiguiente"
        android:text="@string/boton_calcular" />

</RelativeLayout>