<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="1130dp"
    android:background="@drawable/bg3"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/info_why"
        android:layout_below="@+id/newgoal_dgoal"
        android:layout_marginTop="20dp"
        android:text="@string/pregunta_cuando"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView3"
        android:layout_below="@+id/newgoal_calendar"
        android:layout_marginTop="15dp"
        android:text="@string/pregunta_costo"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView4"
        android:layout_below="@+id/newgoal_value"
        android:layout_marginTop="15dp"
        android:text="@string/pregunta_como_ahorras"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/newgoal_saving"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView5"
        android:layout_below="@+id/textView5"
        android:layout_marginTop="15dp"
        android:layout_toLeftOf="@+id/newgoal_calendar"
        android:ems="10"
        android:hint="@string/signo_pesos"
        android:inputType="number" />

    <Spinner
        android:id="@+id/newgoal_t_saving"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/newgoal_saving"
        android:layout_alignLeft="@+id/newgoal_calendar"
        android:layout_marginBottom="0dp"
        android:entries="@array/type_save" />

    <Button
        android:id="@+id/newgoal_bsiguiente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/newgoal_dgoal"
        android:layout_below="@+id/newgoal_saving"
        android:layout_marginLeft="15px"
        android:layout_marginTop="25dp"
        android:layout_toRightOf="@+id/info_why"
        android:background="@color/blue_title"
        android:text="@string/boton_siguiente"
        android:textColor="#fff" />

    <EditText
        android:id="@+id/newgoal_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView5"
        android:layout_below="@+id/textView4"
        android:layout_marginTop="18dp"
        android:ems="10"
        android:hint="@string/signo_pesos"
        android:inputType="number" >

    </EditText>

    <AutoCompleteTextView
        android:id="@+id/newgoal_dgoal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignRight="@+id/textView1"
        android:layout_below="@+id/info_why"
        android:layout_marginTop="15dp"
        android:autoText="false"
        android:ems="10" />
    <Button
        android:id="@+id/newgoal_calculate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/newgoal_bsiguiente"
        android:layout_alignLeft="@+id/newgoal_saving"
        android:layout_marginRight="10px"
        android:layout_alignRight="@+id/info_why"
        android:text="@string/boton_calcular"
        android:background="@color/blue_title"
        android:textColor="#fff"  />

    <ImageButton
        android:id="@+id/newgoal_calendar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_marginLeft="101dp"
        android:layout_toRightOf="@+id/newgoal_value"
        android:src="@android:drawable/ic_menu_today" />

    <TextView
        android:id="@+id/newgoal_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/newgoal_calendar"
        android:layout_toRightOf="@+id/info_why"
        android:text="Medium Text"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/info_why"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/imageView1"
        android:layout_marginLeft="176dp"
        android:layout_marginTop="47dp"
        android:text="@string/pregunta_sueno"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/newgoal_calculate"
        android:layout_marginRight="35dp"
        android:layout_marginTop="33dp"
        android:src="@drawable/logo_bds_mini" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView1"
        android:layout_marginBottom="37dp"
        android:layout_toRightOf="@+id/textView4"
        android:text="@string/titulo_nuevoSueno"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/blue_title"
        android:textSize="30dp"
        android:textStyle="bold" />

</RelativeLayout>