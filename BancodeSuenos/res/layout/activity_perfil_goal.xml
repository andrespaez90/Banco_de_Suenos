<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg3"
    tools:context=".PerfilGoalActivity" >

    <ImageView
        android:id="@+id/ivPortada"
        android:layout_width="fill_parent"
        android:layout_height="255sp"
        android:layout_above="@+id/btn_Fecha_Fin"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/paisaje1" />

    <TextView
        android:id="@+id/tvCostoTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="22dp"
        android:text="1000000000"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/btnAvances"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Avances" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right" >

            <Button
                android:id="@+id/btnCompartir"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_share" />

        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_Fecha_Fin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tvCostoTotal"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="19dp"
        android:background="@drawable/bg_fecha"
        android:gravity="bottom|center"
        android:text="Button" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/linearLayout1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/btn_Fecha_Fin" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
	        android:layout_marginRight="10sp"
	        android:layout_marginLeft="10sp" >

            <ListView
                android:id="@+id/listView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" >
            </ListView>

            <ImageView
                android:id="@+id/ivGlobo"
                android:layout_width="127dp"
                android:layout_height="match_parent"
                android:src="@drawable/globo" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tvNameGoal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ivPortada"
        android:layout_alignRight="@+id/tvCostoTotal"
        android:layout_margin="20sp"
        android:layout_marginBottom="15dp"
        android:text="Nombre del SueÃ±o"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#fff" />

</RelativeLayout>