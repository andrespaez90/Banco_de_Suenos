<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".InfoGoalActivity" >
    
<ScrollView
        android:id="@+id/login_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent" 
        android:background="@drawable/bg2">
        	
	<RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:background="@drawable/bg3"
	    android:paddingBottom="@dimen/activity_vertical_margin"
	    android:paddingLeft="@dimen/activity_horizontal_margin"
	    android:paddingRight="@dimen/activity_horizontal_margin"
	    android:paddingTop="@dimen/activity_vertical_margin"
	    tools:context=".InfoGoalActivity" >
	
	    <EditText
	        android:id="@+id/info_namegoal"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignLeft="@+id/info_img"
	        android:layout_alignRight="@+id/info_img"
	        android:layout_below="@+id/textView1"
	        android:layout_marginTop="17dp"
	        android:ems="10"
	        android:inputType="textPersonName" >
	
	        <requestFocus />
	    </EditText>
	 
	    <ImageView
	        android:id="@+id/info_img"
	        android:layout_width="wrap_content"
	        android:layout_height="150dp"
	        android:layout_alignParentLeft="true"
	        android:layout_alignParentRight="true"
	        android:layout_below="@+id/info_namegoal"
	        android:layout_marginTop="27dp"
	        android:src="@drawable/paisaje" />
	
	    <ImageButton
	        android:id="@+id/info_gridphoto"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignRight="@+id/info_img"
	        android:layout_below="@+id/info_img"
	        android:layout_marginRight="43dp"
	        android:src="@android:drawable/ic_menu_search" />
	
	    <EditText
	        android:id="@+id/info_why"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignLeft="@+id/info_img"
	        android:layout_alignRight="@+id/info_img"
	        android:layout_below="@+id/info_camera"
	        android:layout_marginTop="10dp"
	        android:hint="@string/texto_explicacionNombre"
	        android:inputType="textMultiLine"
	        android:textAlignment="center"
	        android:textColor="@color/blue_title" />
	    
	    <TextView
	        android:id="@+id/textView1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentTop="true"
	        android:layout_centerHorizontal="true"
	        android:layout_marginTop="23dp"
	        android:gravity="center"
	        android:text="@string/pregunta_nombre"
	        android:textAppearance="?android:attr/textAppearanceLarge" />
	
	    <ImageButton
	        android:id="@+id/info_camera"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignTop="@+id/info_gridphoto"
	        android:layout_toLeftOf="@+id/info_gridphoto"
	        android:src="@android:drawable/ic_menu_camera" />
	
	    <Button
	        android:id="@+id/info_bnext"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignLeft="@+id/info_camera"
	        android:layout_alignRight="@+id/info_gridphoto"
	        android:layout_below="@+id/info_why"
	        android:layout_marginTop="18dp"
	        android:gravity="center"
	        android:text="@string/boton_ok"
	        android:textAlignment="center" />
	
	    <Button
	        android:id="@+id/info_bskip"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignBaseline="@+id/info_bnext"
	        android:layout_alignBottom="@+id/info_bnext"
	        android:layout_alignLeft="@+id/textView1"
	        android:gravity="center_vertical"
	        android:text="@string/boton_omitir"
	        android:textAlignment="textStart" />
	
	</RelativeLayout>
	</ScrollView>
	</merge>
