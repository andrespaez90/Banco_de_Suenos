<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background0_tilde"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".NewGoalActivity" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/titulo_nuevoSueno"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/blue_title"
        android:textSize="30dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView1"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:text="@string/pregunta_sueno"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView2"
        android:layout_below="@+id/newgoal_dgoal"
        android:layout_marginTop="20dp"
        android:text="@string/pregunta_cuando"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView3"
        android:layout_below="@+id/newgoal_calendar"
        android:layout_marginTop="15dp"
        android:text="@string/pregunta_costo"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView4"
        android:layout_below="@+id/newgoal_value"
        android:layout_marginTop="15dp"
        android:text="@string/pregunta_como_ahorras"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/newgoal_saving"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView5"
        android:layout_below="@+id/textView5"
        android:layout_marginTop="15dp"
        android:layout_toLeftOf="@+id/newgoal_calendar"
        android:ems="10"
        android:hint="@string/signo_pesos"
        android:inputType="number" />

    <Spinner
        android:id="@+id/newgoal_t_saving"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/newgoal_saving"
        android:layout_alignLeft="@+id/newgoal_calendar"
        android:layout_marginBottom="0dp"
        android:entries="@array/type_save" />

    <Button
        android:id="@+id/newgoal_bsiguiente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/newgoal_t_saving"
        android:layout_below="@+id/newgoal_saving"
        android:layout_marginTop="25dp"
        android:layout_toRightOf="@+id/textView2"
        android:background="@color/blue_title"
        android:text="@string/boton_siguiente"
        android:textColor="#fff" />

    <EditText
        android:id="@+id/newgoal_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView5"
        android:layout_below="@+id/textView4"
        android:layout_marginTop="18dp"
        android:ems="10"
        android:hint="@string/signo_pesos"
        android:inputType="number" >

        <requestFocus />
    </EditText>

    <ImageButton
        android:id="@+id/newgoal_calendar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="12dp"
        android:layout_toRightOf="@+id/textView3"
        android:src="@android:drawable/ic_menu_today" />

    <TextView
        android:id="@+id/newgoal_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/newgoal_calendar"
        android:layout_alignRight="@+id/textView2"
        android:layout_marginBottom="12dp"
        android:layout_marginRight="16dp"
        android:text="Medium Text"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <AutoCompleteTextView
        android:id="@+id/newgoal_dgoal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignRight="@+id/newgoal_t_saving"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="15dp"
        android:autoText="false"
        android:ems="10" />

    <Button
        android:id="@+id/newgoal_calculate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/newgoal_bsiguiente"
        android:layout_alignLeft="@+id/newgoal_saving"
        android:layout_alignRight="@+id/textView2"
        android:text="@string/boton_calcular"
        android:background="@color/blue_title"
        android:textColor="#fff"  />

</RelativeLayout>