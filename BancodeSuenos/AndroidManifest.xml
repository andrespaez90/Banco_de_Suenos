<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.devsmind.bancodesuenos"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.devsmind.bancodesuenos.StartActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.db.Activities.NewGoalActivity"
            android:label="@string/title_activity_new_goal" >
        </activity>
        <activity
            android:name="com.devsmind.bancodesuenos.MainActivity"
            android:label="@string/title_activity_main" >
        </activity>
        <activity
            android:name="com.db.Activities.InfoGoalActivity"
            android:label="@string/title_activity_custom_goal" >
        </activity>
        <activity
            android:name="com.db.Activities.LoginActivity"
            android:label="@string/title_activity_login"
            android:windowSoftInputMode="adjustResize|stateVisible" >
        </activity>
        <activity
            android:name="com.db.Activities.PhotosActivity"
            android:label="@string/title_activity_photos" >
        </activity>

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/app_id" />

        <activity
            android:name="com.facebook.LoginActivity"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" >
        </activity>
        <activity
            android:name="com.db.Activities.AmigosActivity"
            android:label="@string/title_activity_amigos" >
        </activity>
        <activity
            android:name="com.devsmind.bancodesuenos.PerfilActivity"
            android:label="@string/title_activity_perfil" >
        </activity>
        <activity
            android:name="com.devsmind.bancodesuenos.PerfilGoalActivity"
            android:label="@string/title_activity_perfil_goal" >
        </activity>
        <activity
            android:name="com.db.Activities.ConfigActivity"
            android:label="@string/title_activity_config"
            android:parentActivityName="android.preference.PreferenceActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="android.preference.PreferenceActivity" />
        </activity>
    </application>

</manifest>
